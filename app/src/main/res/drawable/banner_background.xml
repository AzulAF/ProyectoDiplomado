<!-- res/drawable/banner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Border Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="4dp"
                />
            <!-- Transparent fill so that only the border is visible on this layer -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Inner Background Layer (white or any background color) -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>
